<h1>お題決め</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@picture, url: theme_path) do |f| %>
      <%= render 'shared/error_message' %>
      <%= f.label :theme, 'お題' %>
      <%= f.text_field :theme, class: 'form-control' %>

      <%= f.label :name, 'お名前' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.hidden_field :canvas_url, value: "隠し要素" %>

      <%= f.submit "筆をとる", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
