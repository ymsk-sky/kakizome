<h1>お題決め</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(writing_path, method: "GET", id: "check_form") do %>
      <%= label_tag("お題") %>
      <%= text_field_tag(:user_theme, "", required: true) %>

      <%= label_tag("お名前") %>
      <%= text_field_tag(:user_name, "", required: true) %>

      <%= submit_tag("筆をとる") %>
    <% end %>
  </div>
</div>
