<h1>お題決め</h1>

<div class="panel panel-default">
  <div class="panel-heading">書き初め例</div>
  <div class="panel-body">
    <li>初日の出</li>
    <li>亥</li>
    <li>元日</li>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(writing_path, method: "GET", id: "check_form") do %>
      <%= label_tag("お題") %>
      <%= text_field_tag(:user_theme, "", required: true, maxlength: 20) %>

      <%= label_tag("お名前") %>
      <%= text_field_tag(:user_name, "", required: true, maxlength: 12) %>

      <%= submit_tag "筆をとる", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
